<!doctype html>
<html lang="en">
<head>
    <script   src="https://code.jquery.com/jquery-2.2.4.min.js"   integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="   crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://use.fontawesome.com/b28b7d5db1.js"></script>
    <link href="/public/reset.css" rel="stylesheet" />
    <link href="/public/styles.css" rel="stylesheet" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="initial-scale=1.0">
    <title>Document</title>
</head>
<body>
  <div class="container">
    <div class="search-container">
      <% include partials/search-form.ejs %>
    </div>
    <div class="character-info">
      <p class="character-name"><%= info.name %></p>
      <img src="/public/images/<%= info.class %>.png" alt="<%= info.class %> icon" class="class-icon <%= info.class %>" />
      <div class="item-level-container">
        <p class="item-level">
          Item Level: <span class="item-level"><%=info.itemLevel  %></span>
        </p>
      </div>
    </div>

    <h3>Raid Progression</h3>
    <div class="raid-instance">
      <% for(var i = 0; i < info.progress.length; i++) { %>
        <!-- Setting the difficulty to the highest with progress -->
        <% var difficulty = "", progress = 0, kills; %>
        <% if(info.progress[i].mythicProgress > 0) { %>
          <% difficulty = "Mythic"; %>
          <% progress = info.progress[i].mythicProgress; %>
        <% } else if(info.progress[i].heroicProgress > 0) { %>
          <% difficulty = "Heroic"; %>
          <% progress = info.progress[i].heroicProgress; %>
          <!-- < kills = info.progress[i].heroicKills; %> -->
        <% } else if(info.progress[i].normalProgress > 0) { %>
          <% difficulty = "Normal"; %>
          <% progress = info.progress[i].normalProgress; %>
        <% } else if(info.progress[i].lfrProgress > 0) { %>
          <% difficulty = "Looking for Raid"; %>
          <% progress = info.progress[i].lfrProgress; %>
        <% } %>

        <span class="collapse fa fa-plus"></span><h5 class="instance-name"><%= info.progress[i].name %> (<%= progress %>/<%= info.progress[i].totalBosses %>)</h5>
        <p class="difficulty"><%= difficulty %></p>
        <ul class="raid-bosses hidden">
          <% for(var b = 0; b < info.progress[i].bosses.length; b++) { %>
            <% if(difficulty == "Mythic") { %>
              <% kills = info.progress[i].bosses[b].mythicKills; %>
            <% } else if(difficulty == "Heroic") { %>
              <% kills = info.progress[i].bosses[b].heroicKills; %>
            <% } else if(difficulty == "Normal") { %>
              <% kills = info.progress[i].bosses[b].normalKills; %>
            <% } else if(difficulty == "Looking for Raid") { %>
              <% kills = info.progress[i].bosses[b].lfrKills; %>
            <% } %>
            <li>
              <% if(kills > 0) { %>
                <span class="killed-box fa fa-check-square-o"></span>
              <% } else { %>
                <span class="killed-box fa fa-square-o"></span>
              <% } %>
              <%= info.progress[i].bosses[b].name %>
            </li>
          <% } %>
        </ul>
      <% } %>
    </div>

    <% include partials/footer.ejs %>
  </div>

    <script src="/public/app.js"></script>
</body>
</html>
